{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cppbuild main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "main.cpp",
                "-o", "main.exe"
            ],
            "group": "build"
        },
        {
            "label": "cppbuild",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "\"${relativeFile}\"",
                "-o", "${relativeFileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": "build"
        }
    ]
}