{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cppbuild main",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-mavx",
                "-mavx2",
                "-mfma",
                "-g",
                "main.cpp",
                "-o",
                "main.exe",
                "--std=c++17"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "cppbuild",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-mavx",
                "-mavx2",
                "-mfma",
                "-g",
                "\"${relativeFile}\"",
                "-o",
                "main.exe",
                "--std=c++17"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}